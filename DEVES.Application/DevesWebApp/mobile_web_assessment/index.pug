html(lang='en',data-ng-app='crmApp')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
        meta(name='description', content='')
        meta(name='author', content='')

        title DEVES-แบบสอบถามความพึงพอใจ
        include icon
        // Bootstrap core CSS
        link(href='assets/bootstrap/css/bootstrap.css', rel='stylesheet')
        link(href='assets/bootstrap/css/bootstrap-theme.css', rel='stylesheet')
        // IE10 viewport hack for Surface/desktop Windows 8 bug
        link(href='assets/css/ie10-viewport-bug-workaround.css', rel='stylesheet')
        // Custom styles for this template
        link(href='assets/css/sticky-footer.css', rel='stylesheet')
        link(rel='stylesheet', href='assets/resource/pfc_angular.css', crossorigin='anonymous')
        link(href='assets/css/style.css?v=13-6-1560', rel='stylesheet')
        // Just for debugging purposes. Don't actually copy these 2 lines!
        //if lt IE 9
          script(src='../../assets/js/ie8-responsive-file-warning.js')
        script(src='assets/js/ie-emulation-modes-warning.js')

        // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        //if lt IE 9
          script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
          script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

    body(ng-controller='mainController as vm',
        dw-loading='main',
        dw-loading-options="{text:'Processing...', spinner: false}",
        width='100%', style='margin: 0; mso-line-height-rule: exactly; ')
        // Begin page content
        .container.rcorners0

            .container.header-container#main-container(style="display:none")
                section#home-page(style="display:none")
                    .page-header(style="height:50px")

                    .page-body
                        a(data-ng-click="startQuestion()")
                            img#home-img-mobile(src="img/deves/home.jpg",style="width:100%;background-color: white;")
                            img#home-img-full(src="img/deves/Questionaire1_Greeting.jpg",style="width:100%;background-color: white;display:none")


                section#question-page(style="display:none")
                    .page-header.text-center
                        .circleBase.type2(ng-repeat="q in questions",data-id="circle-{{q.id}}")

                        .clearfix
                    .page-body
                        .row.rcorners1
                            .col-sm-12
                                h4 {{currentQuestion.title}}
                            .col-sm-12
                                h4.question-text {{currentSubQuestion.title}}
                        .row.rcorners2
                            .col-sm-12.text-left.sub-question-title
                                h5 ระดับความพึงพอใจ
                            .col-sm-12(
                            dw-loading='options',
                            dw-loading-options="{text:'Loading...', spinner: false}",)
                                include select-option-mobile
                section#question-remark-form(style="display:none")
                    .page-header.text-center
                        .circleBase.type1(ng-repeat="q in questions")

                        .clearfix

                    .page-body
                        .row.rcorners1
                            .col-sm-12
                                h4.question-text ข้อแนะนำเพิ่มเติม
                        .row.rcorners2
                            .col-sm-12.text-left
                                h5
                                textarea#textarea-comment(rows=10,style="width:100%",autofocus=true, ng-model="comment")
                                .clearfix
                            .col-sm-12.text-center(style="margin-top:20px")
                                a#btn-submitform.btn.btn-black.btn-lg(ng-click="submitQuestionResult()")
                                    span.button-link(style='color:#ffffff;') ส่งคำตอบ 

                section#thanks-page(style="display:none")
                    .page-header
                    .page-body#thanks-page-body
                        .row
                            .col-xs-8#thanks-page-body-left-panel.text-center
                                .row
                                    .vertical-center

                                        img#img-thanks-img(src="img/deves/thanks-img.png",style="width:95%")
                                        div#deves-icon-container
                                            a#btn-thanks1(href="http://www.deves.co.th/service/GarageCheer.aspx")
                                                img.deves-icon(src="img/deves/btn1_2.png",style="width:auto;height:150px")

                                            a#btn-thanks2(href="http://www.deves.co.th/service/Cgarage.aspx")
                                                img.deves-icon(src="img/deves/btn2_2.png",style="width:auto;height:150px")

                                            a#btn-thanks3(href="http://www.deves.co.th/Content/View/303")
                                                img.deves-icon(src="img/deves/btn3_2.png",style="width:7auto;height:150px")



                            .col-xs-4#thanks-page-body-right-panel

                                img#img-deves-logo(src="img/deves/deves_logo.png",style="height:70px")

                                img#img-deves-line(src="img/deves/deves_line.png",style="width:98%;height:auto;")
                                a(href="https://goo.gl/nrTbtA")
                                    img#img-deves-line-add-friends(src="img/deves/icon-add-friends.jpg",style="width:90%;height:auto;")
                                img#img-deves-socail(src="img/deves/social.png",style="height:100px")
                                //

                                    #thanks-page-body-social
                                        img(src="img/deves/social.png",style="width:150px; margin-right:50px;")

        footer.footer#page-footer
            .container
                .row(style="max-height:100px")
                    .col-xs-6
                        img#footer-deves-logo.float-left(src="img/deves-logo.png" )
                    .col-xs-6
                        img#footer-deves-line-qr.float-right(src="img/deves-line-qr.png",style="float: right !important")
        // IE10 viewport hack for Surface/desktop Windows 8 bug
        script(src='assets/js/ie10-viewport-bug-workaround.js')
        script(src='assets/resource/pfc_jquery.js')
        script(src='assets/resource/pfc_angular.js')
        script(src='assets/resource/pfc_angular_modules.js')
        script(src='assets/js/config.js?v=13-6-1560')
        script(src='assets/js/main-controller.js?v=13-6-1560')








