doctype html
html(lang='en',ng-app='crmApp')
    head
        meta(charset='utf-8')
        // utf-8 works for most cases
        meta(name='viewport', content='width=device-width')
        // Forcing initial-scale shouldn't be necessary
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        // Use the latest (edge) version of IE rendering engine
        meta(name='x-apple-disable-message-reformatting')
        // Disable auto-scale in iOS 10 Mail entirely


        include icon
        style
         include style.css



    body(ng-controller='mainController as vm',
    dw-loading='main',
    dw-loading-options="{text:'Processing...', spinner: false}",
    width='100%', style='margin: 0; mso-line-height-rule: exactly;')
        center#main-page(style='width: 100%;  text-align: left;')

            .email-container(style='max-width: 680px; margin: auto;')

                include heading-logo

                table.email-container(role='presentation', aria-hidden='true', cellspacing='0', cellpadding='0', border='0', align='center', width='100%', style='max-width: 680px;')

                    include question-mobile-form
                    include question-remark
                    include thank-page

                    tr#footer-page
                        td(bgcolor='#ffffff', valign='middle',
                        style='background-image:url(img/deves/thanks-bg.png) ' +
                              'text-align: center; background-position: center center !important; background-size: cover !important;')
                            div
                                .row(style="max-height:100px")
                                    .col-xs-6
                                        img#footer-deves-logo.float-left(src="img/deves-logo.png" )
                                    .col-xs-6
                                        img#footer-deves-line-qr.float-right(src="img/deves-line-qr.png",style="float: right !important")

                                table(role='presentation', aria-hidden='true', border='0', cellpadding='0', cellspacing='0', align='center', width='100%', style=' margin: auto;')



        include ../includes/local-head-2
        script(type='text/javascript')
            include module.js
            include main-controller.js


