   - layout.pug
include ../../includes/mixins
block declare
    - var pageTitle = "Assessment";
html

    head
        block headTitle
            title #{pageTitle}
        include ../../includes/local-head-2
        include ../../includes/page-style

        style.
           
            #wrap { position:fixed; left:0; width:100%; top:0; height:100%; }

            #tabContents { display: block; width:100%; height:100%; }
            .iframeContent { display: block; width:100%; height:100%; }
            #tabs-action-bar{
                padding-top: 5px;
                padding-right: 5px;
                min-height:30px;
                margin-bottom: 0px;
                margin-top: 0px;
                border-top: none;
            }
            #menuContents{
                overflow-x: hidden;
            }
            .page-header {
                margin-bottom:0px;
            }

            #custom-search-input {
                padding: 3px;
                border: solid 1px #E4E4E4;
                border-radius: 6px;
                background-color: #fff;
            }

            #custom-search-input input {
                border: 0;
                box-shadow: none;
            }

            #custom-search-input button {
                margin: 2px 0 0 0;
                background: none;
                box-shadow: none;
                border: 0;
                color: #666666;
                padding: 0 8px 0 10px;
                border-left: solid 1px #ccc;
            }

            #custom-search-input button:hover {
                border: 0;
                box-shadow: none;
                border-left: solid 1px #ccc;
            }

            #custom-search-input .glyphicon-search {
                font-size: 16px;
            }
            .iframeMenu {
                max-width:0px; max-height: 0px;
            }
            a{
                font-size: smaller;
            }
            th {
                background: steelblue;
                font-size: smaller;

                font-weight: lighter;
                text-shadow: 0 1px 0 #38678f;
                color: white;
                border: 1px solid #38678f;
                box-shadow: inset 0px 1px 2px #568ebd;
                transition: all 0.2s;
            }

            td {
                border-right: 1px solid #cccccc;
                padding: 10px;
                transition: all 0.2s;
            }
            .jBox-content{

                overflow: hidden;

            }
    body(ng-app='crmApp',
    ng-controller='mainController as vm',
    dw-loading='main',
    dw-loading-options="{text:'Processing...', spinner: true}"
    )


        +page-nav-header(pageTitle)
        #main-container(
        style='display: none')
            block body

        block script


