{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "rvpClaimNo": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20
    },

    "policyInfo": {
      "type": "object",
      "properties": {
        "crmPolicyDetailId": {
          "type": "string", 
          "maxLength": 40
        },
        "crmPolicyDetailCode": {
          "type": "string",
          "maxLength": 100
        },
        "policyNo": {
          "type": "string",
          "maxLength": 15
        },
        "renewalNo": {
          "type": "string",
          "maxLength": 10
        },
        "fleetCarNo": {
          "type": "string",
          "maxLength": 10
        },
        "barcode": {
          "type": "string",
          "maxLength": 50
        },
        "carChassisNo": {
          "type": "string",
          "maxLength": 30
        },
        "currentCarRegisterNo": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "currentCarRegisterProv": {
          "type": "string",
          "minLength": 1,
          "maxLength": 5
        },
        "insuredCleansingId": {
          "type": "string",
          "maxLength": 20
        },
        "insuredClientType": {
          "type": "string",
          "maxLength": 2
        },
        "insuredFullName": {
          "type": "string",
          "maxLength": 120
        },
        "insuredClientId": {
          "type": "string",
          "maxLength": 10
        }
      },
      "required": [
        "currentCarRegisterNo",
        "currentCarRegisterProv"
      ]
    },

    "policyDriverInfo": {
      "type": "object",
      "properties": {
        "driverCleansingId": {
          "type": "string",
          "maxLength": 20
        },
        "driverFullName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120
        },
        "driverClientId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10
        },
        "driverMobile": {
          "type": "string",
          "maxLength": 20
        },
        "driverPhoneNo": {
          "type": "string",
          "maxLength": 20
        }
      },
      "required": [
        "driverFullName",
        "driverClientId"
      ]
    },

    "claimInform": {
      "type": "object",
      "properties": {
        "informerOn": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "accidentOn": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "accidentDescCode": {
          "type": "string",
          "enum": [
            "101",
            "102",
            "114",
            "201",
            "999"

          ],
          "minLength": 1,
          "maxLength": 100
        },
        "accidentDesc": {
          "type": "string",
          "maxLength": 2000
        },
        "numOfExpectInjury": {
          "type": "integer",
          "minimum": 0,
          "maximum": 20
        },
        "accidentLatitude": {
          "type": "string",
          "maxLength": 20
        },
        "accidentLongitude": {
          "type": "string",
          "maxLength": 20
        },
        "accidentPlace": {
          "type": "string",
          "maxLength": 2000
        },
        "accidentProvn": {
          "type": "string",
          "maxLength": 2
        },
        "accidentDist": {
          "type": "string",
          "maxLength": 4
        },
        "claimType": {
          "type": "string",
          "enum": [
            "I",
            "O"
          ],
          "minLength": 1,
          "maxLength": 1
        },
        "sendOutSurveyorCode": {
          "type": "string",
          "enum": [
            "01",
            "02",
            "03",
            "04",
            "05",
            "06",
            "07"
          ],
          "minLength": 2,
          "maxLength": 2
        },
        "reportAccidentResultDate": {
          "type": "string"
        },
        "caseOwnerCode": {
          "type": "string",
          "maxLength": 20
        },
        "caseOwnerFullName": {
          "type": "string",
          "maxLength": 250
        },
        "informByCrmId": {
          "type": "string",
          "maxLength": 20
        },
        "informByCrmName": {
          "type": "string",
          "maxLength": 200
        },
        "submitByCrmId": {
          "type": "string",
          "maxLength": 20
        },
        "submitByCrmName": {
          "type": "string",
          "maxLength": 200
        },
        "accidentLegalResult": {
          "type": "string",
          "enum": [
            "1",
            "2",
            "3",
            "4",
            "5"
          ],
          "minLength": 1,
          "maxLength": 1
        },
        "numOfAccidentInjury": {
          "type": "integer"
        },
        "numOfDeath": {
          "type": "integer"
        },
        "excessFee": {
          "type": "integer"
        },
        "deductibleFee": {
          "type": "integer"
        },
        "accidentNatureDesc": {
          "type": "string",
          "maxLength": 2000
        },
        "policeStation": {
          "type": "string",
          "maxLength": 200
        },
        "policeRecordId": {
          "type": "string",
          "maxLength": 200
        },
        "policeRecordDate": {
          "type": "string"
        },
        "policeBailFlag": {
          "type": "string",
          "enum": [
            "Y",
            "N"
          ],
          "minLength": 1,
          "maxLength": 1
        },
        "numOfAccidentParty": {
          "type": "integer"
        }
      },
      "required": [
        "informerOn",
        "accidentOn",
        "accidentDescCode",
        "numOfExpectInjury",
        "claimType",
        "sendOutSurveyorCode",
        "reportAccidentResultDate",
        "caseOwnerCode",
        "caseOwnerFullName",
        "informByCrmId",
        "informByCrmName",
        "submitByCrmId",
        "submitByCrmName",
        "accidentLegalResult",
        "numOfAccidentInjury",
        "numOfAccidentParty"
      ]
    },

    "accidentPartyInfo": {
      "type": "array",
      "properties": {
        "rvpAccidentPartySeq": {
          "type": "integer"
        },
        "accidentPartyFullname": {
          "type": "string",
          "maxLength": 200
        },
        "accidentPartyPhone": {
          "type": "string",
          "maxLength": 50
        },
        "accidentPartyCarPlateNo": {
          "type": "string",
          "maxLength": 50
        },
        "accidentPartyCarPlateProv": {
          "type": "string",
          "maxLength": 50
        },
        "accidentPartyInsuranceCompany": {
          "type": "string",
          "maxLength": 200
        },
        "accidentPartyPolicyNumber": {
          "type": "string",
          "maxLength": 50
        },
        "accidentPartyPolicyType": {
          "type": "string",
          "maxLength": 200
        }
      }
    }

  },
  "required": [
    "rvpClaimNo",
    "policyInfo",
    "policyDriverInfo",
    "claimInform"
  ]
}