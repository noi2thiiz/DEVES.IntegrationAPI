{

  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "generalHeader": {
      "type": "object",
      "properties": {
        "requester": {
          "type": "string"
        },
        "topic": {
          "type": "string",
          "maxLength": 300
        }
      },
      "required": [
        "requester",
        "topic"
      ]
    },
    "contactInfo": {
      "type": "object",
      "properties": {
        "salutation": {
          "type": "string",
          "enum": [
            "0001",
            "0002",
            "0003",
            "0005",
            "0008",
            ""
          ]
        },
        "sex": {
          "type": "string",
          "enum": [
            "F",
            "M",
            "U",
            ""
          ]
        },
        "firstName": {
          "type": "string",
          "maxLength": 70
        },
        "lastName": {
          "type": "string",
          "maxLength": 70
        },
        "email": {
          "type": "string",
          "maxLength": 50
        },
        "mobilePhone": {
          "type": "string",
          "anyOf": [
              {
                "pattern": "^[0-9]{10}$"
              },
              {
                "pattern": "^%"
              }
          ],
          "maxLength": 10
        },
        "businessPhone": {
          "type": "string",
          "pattern": "^[0-9]{10}$",
          "maxLength": 50
        },
        "fax": {
          "type": "string",
          "maxLength": 50
        },
        "description": {
          "type": "string"
        },
        "jobTitle": {
          "type": "string",
          "maxLength": 100
        },
        "preferredMethodOfContact": {
          "type": "string",
          "enum": [
            "Any",
            "Email",
            "Phone",
            "Fax",
            ""
          ]
        },
        "line": {
          "type": "string",
          "maxLength": 50
        },
        "facebookId": {
          "type": "string",
          "maxLength": 100
        }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    },
    "companyInfo": {
      "type": "object",
      "properties": {
        "companyName": {
          "type": "string",
          "maxLength": 100
        },
        "websiteUrl": {
          "type": "string",
          "maxLength": 200
        },
        "address": {
          "type": "string",
          "maxLength": 1000
        }
      }
    },
    "productInfo": {
      "type": "object",
      "properties": {
        "groupCode": {
          "type": "string",
          "maxLength": 10
        },
        "groupName": {
          "type": "string",
          "maxLength": 100
        },
        "productCode": {
          "type": "string",
          "maxLength": 10
        },
        "productName": {
          "type": "string",
          "maxLength": 100
        },
        "categoryCode": {
          "type": "string",
          "maxLength": 10
        },
        "categoryName": {
          "type": "string",
          "maxLength": 100
        },
        "budgetAmount": {
          "type": [ "number", "null"],
          "multipleOf": 0.01,
          "minimum": 0,
          "maximum": 1000000000000
        }
      },
      "required": [
        "groupCode",
        "productCode",
        "productName"
      ]
    },
    "insuredInfo": {
      "type": "object",
      "properties": {
        "insuredFullName": {
          "type": "string",
          "maxLength": 140
        },
        "insuredMobilePhone": {
          "type": "string",
          "maxLength": 10
        },
        "insuredIssueDate": {
          "type": "string",
          "anyOf": [
              {
                "pattern": "^20[0-9]{2}-[0-1]{1}[0-9]{1}-[0-3]{1}[0-9]{1} [0-9]{2}:[0-9]{2}:[0-9]{2}$"
              },
              {
                "pattern": ""
              }
          ]
        }
      },
      "required": [
        "insuredFullName"
      ]
    },
    "vehicleInfo": {
      "type": "object",
      "properties": {
        "brandCode": {
          "type": "string",
          "maxLength": 10
        },
        "brandName": {
          "type": "string",
          "maxLength": 100
        },
        "modelCode": {
          "type": "string",
          "maxLength": 10
        },
        "modelName": {
          "type": "string",
          "maxLength": 100
        },
        "year": {
          "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
          ],
          "maxLength": 4
        }
      }
    }

  },
  "required": [
    "generalHeader" 
  ]

}