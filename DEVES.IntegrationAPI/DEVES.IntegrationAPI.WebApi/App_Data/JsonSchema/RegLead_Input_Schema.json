{

  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "generalHeader": {
      "type": "object",
      "properties": {
        "requester": {
          "type": "string"
        },
        "topic": {
          "type": "string",
          "maxLength": 300
        }
      },
      "required": [
        "requester",
        "topic"
      ]
    },
    "contactInfo": {
      "type": "object",
      "properties": {
        "salutation": {
          "type": "string",
          "enum": [
            "0001",
            "0002",
            "0003",
            "0005",
            "0008"
          ]
        },
        "sex": {
          "type": "string",
          "enum": [
            "F",
            "M",
            "U"
          ]
        },
        "firstName": {
          "type": "string",
          "maxLength": 70
        },
        "lastName": {
          "type": "string",
          "maxLength": 70
        },
        "email": {
          "type": "string",
          "maxLength": 50
        },
        "mobilePhone": {
          "type": "string",
          "maxLength": 10
        },
        "businessPhone": {
          "type": "string",
          "maxLength": 50
        },
        "fax": {
          "type": "string",
          "maxLength": 50
        },
        "description": {
          "type": "string"
        },
        "jobTitle": {
          "type": "string",
          "maxLength": 100
        },
        "line": {
          "type": "string",
          "maxLength": 50
        },
        "preferredMethodOfContact": {
          "type": "string",
          "enum": [
            "Any",
            "Email",
            "Phone",
            "Fax"
          ]
        },
        "facebookId" {
          "type": "string",
          "maxLength": 100
        }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    },
    "companyInfo": {
      "type": "object",
      "properties": {
        "companyName": {
          "type": "string",
          "maxLength": 100
        },
        "websiteUrl": {
          "type": "string",
          "maxLength": 200
        },
        "address": {
          "type": "string",
          "maxLength": 1000
        }
      }
    },
    "productInfo": {
      "type": "object",
      "properties": {
        "groupCode": {
          "type": "string",
          "maxLength": 10
        },
        "groupName": {
          "type": "string",
          "maxLength": 100
        },
        "productCode": {
          "type": "string",
          "maxLength": 10
        },
        "productName": {
          "type": "string",
          "maxLength": 100
        },
        "categoryCode": {
          "type": "string",
          "maxLength": 10
        },
        "categoryName": {
          "type": "string",
          "maxLength": 100
        },
        "price": {
          "type": "integer"
        }
      },
      "required": [
        "groupCode",
        "productCode",
        "productName"
      ]
    },
    "insuredInfo": {
      "type": "object",
      "properties": {
        "insuredFullName": {
          "type": "string",
          "maxLength": 140
        },
        "insuredMobilePhone": {
          "type": "string",
          "maxLength": 10
        },
        "insuredIssueDate": {
          "type": "string"
        }
      },
      "required": [
        "insuredFullName"
      ]
    },
    "vehicleInfo": {
      "type": "object",
      "properties": {
        "brandCode": {
          "type": "string",
          "maxLength": 10
        },
        "brandName": {
          "type": "string",
          "maxLength": 100
        },
        "modelCode": {
          "type": "string",
          "maxLength": 10
        },
        "modelName": {
          "type": "string",
          "maxLength": 100
        },
        "year": {
          "type": "integer",
          "maxLength": 4
        }
      }
    }

  },
  "required": [
    "generalHeader" 
  ]

}