{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "generalHeader": {
      "type": "object",
      "properties": {
        "roleCode": {
          "type": "string",
          "maxLength": 5
        },
        "cleansingId": {
          "type": "string",
          "maxLength": 20
        },
        "polisyClientId": {
          "type": "string",
          "maxLength": 8
        },
        "crmClientId": {
          "type": "string",
          "maxLength": 20
        },
        "clientAdditionalExistFlag": {
          "type": "string",
          "maxLength": 1
        }
      },
      "required": [
        "roleCode",
        "clientAdditionalExistFlag"
      ]
    },

    "profileInfo": {
      "type": "object",
      "properties": {
        "salutation": {
          "type": "string",
          "maxLength": 8
        },
        "personalName": {
          "type": "string",
          "maxLength": 60
        },
        "personalSurname": {
          "type": "string",
          "maxLength": 60
        },
        "sex": {
          "type": "string",
          "maxLength": 1
        },
        "idCitizen": {
          "type": "string",
          "maxLength": 24
        },
        "idPassport": {
          "type": "string",
          "maxLength": 20
        },
        "idAlien": {
          "type": "string",
          "maxLength": 20
        },
        "idDriving": {
          "type": "string",
          "maxLength": 20
        },
        "birthDate": {
          "type": "string",
          "maxLength": 20
        },
        "nationality": {
          "type": "string",
          "maxLength": 3
        },
        "language": {
          "type": "string",
          "maxLength": 1
        },
        "married": {
          "type": "string",
          "maxLength": 1
        },
        "occupation": {
          "type": "string",
          "maxLength": 3
        },
        "riskLevel": {
          "type": "string",
          "maxLength": 2
        },
        "vipStatus": {
          "type": "string",
          "maxLength": 1
        },
        "remark": {
          "type": "string",
          "maxLength": 100
        }
      },
      "required": [
        "salutation",
        "personalName",
        "personalSurname",
        "sex"
      ]
    },

    "contactInfo": {
      "type": "object",
      "properties": {
        "telephone1": {
          "type": "string",
          "maxLength": 10
        },
        "telephone1Ext": {
          "type": "string",
          "maxLength": 5
        },
        "telephone2": {
          "type": "string",
          "maxLength": 10
        },
        "telephone2Ext": {
          "type": "string",
          "maxLength": 5
        },
        "telephone3": {
          "type": "string",
          "maxLength": 10
        },
        "telephone3Ext": {
          "type": "string",
          "maxLength": 5
        },
        "mobilePhone": {
          "type": "string",
          "maxLength": 16
        },
        "fax": {
          "type": "string",
          "maxLength": 16
        },
        "emailAddress": {
          "type": "string",
          "maxLength": 50
        },
        "lineID": {
          "type": "string",
          "maxLength": 50
        },
        "facebook": {
          "type": "string",
          "maxLength": 100
        }
      }
    },

    "addressInfo": {
      "type": "object",
      "properties": {
        "address1": {
          "type": "string",
          "maxLength": 30
        },
        "address2": {
          "type": "string",
          "maxLength": 30
        },
        "address3": {
          "type": "string",
          "maxLength": 30
        },
        "subDistrictCode": {
          "type": "string",
          "maxLength": 6
        },
        "districtCode": {
          "type": "string",
          "maxLength": 4
        },
        "provinceCode": {
          "type": "string",
          "maxLength": 2
        },
        "postalCode": {
          "type": "string",
          "maxLength": 10
        },
        "country": {
          "type": "string",
          "maxLength": 3
        },
        "addressType": {
          "type": "string",
          "maxLength": 2
        },
        "latitude": {
          "type": "string",
          "maxLength": 20
        },
        "longtitude": {
          "type": "string",
          "maxLength": 20
        }
      }
    },

    "sapVendorInfo": {
      "type": "object",
      "properties": {
        "sapVendorGroupCode": {
          "type": "string",
          "maxLength": 4
        },
        "bankInfo": {
          "type": "object",
          "properties": {
            "bankCountryCode": {
              "type": "string",
              "maxLength": 3
            },
            "bankCode": {
              "type": "string",
              "maxLength": 4
            },
            "bankBranchCode": {
              "type": "string",
              "maxLength": 4
            },
            "bankAccount": {
              "type": "string",
              "maxLength": 18
            },
            "accountHolder": {
              "type": "string",
              "maxLength": 60
            },
            "paymentMethods": {
              "type": "string",
              "maxLength": 10
            }
          }
        },
        "withHoldingTaxInfo": {
          "type": "object",
          "properties": {
            "whtTaxCode": {
              "type": "string",
              "maxLength": 2
            },
            "receiptType": {
              "type": "string",
              "maxLength": 2
            }
          }
        }
      },
      "required": [
        "sapVendorGroupCode"
      ]
    }

  }
}