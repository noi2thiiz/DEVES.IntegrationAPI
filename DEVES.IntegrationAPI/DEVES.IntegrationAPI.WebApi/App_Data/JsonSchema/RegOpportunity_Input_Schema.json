{

  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "generalHeader": {
      "type": "object",
      "properties": {
        "requester": {
          "type": "string"
        },
        "topic": {
          "type": "string",
          "maxLength": 300
        },
        "leadId": {
          "type": "string",
          "maxLength": 20
        },
        "refId": {
          "type": "string"
        },
        "crmClientId": {
          "type": "string"
        },
        "cleansingId": {
          "type": "string"
        }
      },
      "required": [
        "requester",
        "topic"
      ]
    },
    "contactInfo": {
      "type": "object",
      "properties": {
        "salutation": {
          "type": "string",
          "enum": [
            "0001",
            "0002",
            "0003",
            "0005",
            "0008",
            ""
          ]
        },
        "sex": {
          "type": "string",
          "enum": [
            "F",
            "M",
            "U",
            ""
          ]
        },
        "firstName": {
          "type": "string",
          "maxLength": 70
        },
        "lastName": {
          "type": "string",
          "maxLength": 70
        },
        "email": {
          "type": "string",
          "maxLength": 50
        },
        "mobilePhone": {
          "type": "string",
          "maxLength": 10
        },
        "businessPhone": {
          "type": "string",
          "maxLength": 50
        },
        "fax": {
          "type": "string",
          "maxLength": 50
        },
        "description": {
          "type": "string"
        },
        "jobTitle": {
          "type": "string",
          "maxLength": 100
        },
        "preferredMethodOfContact": {
          "type": "string",
          "enum": [
            "Any",
            "Email",
            "Phone",
            "Fax",
            ""
          ]
        }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    },
    "opportunityInfo": {
      "type": "object",
      "properties": {
        "budgetAmount": {
          "type": [ "number", "null"],
          "multipleOf": 0.01,
          "minimum": 0,
          "maximum": 1000000000000
        },
        "purchaseProcess": {
          "type": "string"
        },
        "purchasetimeframe": {
          "type": "string"
        },
        "currentSituation": {
          "type": "string",
          "maxLength": 2000
        },
        "customerNeed": {
          "type": "string",
          "maxLength": 2000
        },
        "proposedSolution": {
          "type": "string",
          "maxLength": 2000
        },
        "salesStage": {
          "type": "string",
          "enum": [
            "Qualify",
            "Develop",
            "Propose",
            "Close",
            ""
          ]
        }
      }
    },
    "companyInfo": {
      "type": "object",
      "properties": {
        "companyName": {
          "type": "string",
          "maxLength": 100
        },
        "websiteUrl": {
          "type": "string",
          "maxLength": 200
        },
        "address": {
          "type": "string",
          "maxLength": 1000
        }
      }
    },
    "productionInfo": {
      "type": "object",
      "properties": {
        "productGroupCode": {
          "type": "string",
          "maxLength": 10
        },
        "productGroupName": {
          "type": "string",
          "maxLength": 100
        },
        "productLine": {
          "type": "array",
          "properties": {
            "productCode": {
              "type": "string",
              "maxLength": 10
            },
            "productName": {
              "type": "string",
              "maxLength": 100
            },
            "categoryCode": {
              "type": "string",
              "maxLength": 10
            },
            "categoryName": {
              "type": "string",
              "maxLength": 100
            },
            "productPrice": {
              "type": [ "number", "null"],
              "multipleOf": 0.01,
              "minimum": 0,
              "maximum": 1000000000000
            }
          },
          "required": [
            "productCode",
            "productName",
            "categoryCode",
            "categoryName",
            "productPrice"
          ]
        }
      },
      "required": [
        "productGroupCode",
        "productGroupName",
        "productLine"
      ]
    }

  },
  "required": [
    "generalHeader"
  ]

}